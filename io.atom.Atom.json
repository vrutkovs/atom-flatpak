{
    "app-id": "io.atom.Atom",
    "base": "io.atom.electron.BaseApp",
    "base-version": "lts",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "atom-beta",
    "branch": "beta",
    "finish-args": [
        "--allow=devel",
        "--talk-name=org.freedesktop.Flatpak",
        "--share=ipc", "--socket=x11",
        "--device=dri",
        "--socket=pulseaudio",
        "--filesystem=host",
        "--filesystem=/tmp",
        "--share=network",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--filesystem=xdg-run/keyring"
    ],
    "modules": [
        {
            "name": "libsecret",
            "config-opts": ["--disable-static", "--disable-manpages"],
            "sources": [
                {
                    "type": "git",
                    "url": "git://git.gnome.org/libsecret"
                }
            ]
        },
        {
            "name": "xkbfile",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.x.org/releases/individual/lib/libxkbfile-1.0.9.tar.bz2",
                    "sha256": "51817e0530961975d9513b773960b4edd275f7d5c72293d5a151ed4f42aeb16a"
                }
            ]
        },
        {
            "name": "libgnome-keyring",
            "config-opts": [ "--disable-static", "--disable-gtk-doc", "--disable-coverage",
                             "--disable-introspection" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libgnome-keyring/3.12/libgnome-keyring-3.12.0.tar.xz",
                    "sha256": "c4c178fbb05f72acc484d22ddb0568f7532c409b0a13e06513ff54b91e947783"
                },
                {
                    "type": "patch",
                    "path": "libgnome-keyring/libgnome-keyring-detect-gcrypt.patch"
                },
                {
                    "type": "shell",
                    "commands": [
                        "autoreconf -fi"
                    ]
                }
            ]
        },
        {
          "name": "nodejs",
          "cleanup": [
            "/lib/node_modules/npm/docs",
            "/lib/node_modules/npm/changelogs",
            "/lib/node_modules/npm/html",
            "/lib/node_modules/npm/man",
            "/share"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://nodejs.org/dist/v6.11.4/node-v6.11.4.tar.gz",
              "sha256": "94557aa1b9adaa71a424eb7efe8877d7e65bda6e496350c4bac5f64ec715bb1c"
            }
          ]
        },
        {
          "name": "pyls",
          "buildsystem": "simple",
          "build-commands": [
            "python3 setup.py install --prefix=/app"
          ],
          "build-options": {
            "build-args": [
              "--share=network"
            ]
          },
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/palantir/python-language-server/archive/0.10.0.tar.gz",
              "sha256": "363f9cafad397dd0468b8920860bf0a244c14d698f13fff61d7524f3f6c404fd"
            }
          ]
        },
        {
            "name": "atom",
            "build-options": {
                "build-args": [
                    "--share=network"
                ]
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/atom/atom/archive/v1.22.0-beta2.tar.gz",
                    "sha256": "21d65a028da755f263bd6567ad4bc6df806b87b098cf51ce59eba6d91c742248"
                },
                {
                    "type": "file",
                    "path": "common/Makefile"
                },
                {
                    "type": "file",
                    "path": "common/configure"
                },
                {
                    "type": "file",
                    "path": "atom/install"
                }
            ]
        }
    ]
}
