{
    "app-id": "io.atom.Atom",
    "base": "io.atom.electron.BaseApp",
    "base-version": "lts",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "atom-beta",
    "branch": "beta",
    "finish-args": [
        "--allow=devel",
        "--talk-name=org.freedesktop.Flatpak",
        "--share=ipc", "--socket=x11",
        "--device=dri",
        "--socket=pulseaudio",
        "--filesystem=host",
        "--filesystem=/tmp",
        "--share=network",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--filesystem=xdg-run/keyring"
    ],
    "modules": [
        {
            "name": "libsecret",
            "config-opts": ["--disable-static", "--disable-manpages"],
            "sources": [
                {
                    "type": "git",
                    "url": "git://git.gnome.org/libsecret"
                }
            ]
        },
        {
            "name": "xkbfile",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.x.org/releases/individual/lib/libxkbfile-1.0.9.tar.bz2",
                    "sha256": "51817e0530961975d9513b773960b4edd275f7d5c72293d5a151ed4f42aeb16a"
                }
            ]
        },
        {
            "name": "libgnome-keyring",
            "config-opts": [ "--disable-static", "--disable-gtk-doc", "--disable-coverage",
                             "--disable-introspection" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libgnome-keyring/3.12/libgnome-keyring-3.12.0.tar.xz",
                    "sha256": "c4c178fbb05f72acc484d22ddb0568f7532c409b0a13e06513ff54b91e947783"
                },
                {
                    "type": "patch",
                    "path": "libgnome-keyring/libgnome-keyring-detect-gcrypt.patch"
                },
                {
                    "type": "shell",
                    "commands": [
                        "autoreconf -fi"
                    ]
                }
            ]
        },
        {
            "name": "atom",
            "build-options": {
                "build-args": [
                    "--share=network"
                ]
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/atom/atom/archive/v1.20.0-beta3.tar.gz",
                    "sha256": "3392d277b086c50e3f4455346971ea3d9a2dd15f535b144620fb135e46f1c108"
                },
                {
                    "type": "file",
                    "path": "common/Makefile"
                },
                {
                    "type": "file",
                    "path": "common/configure"
                },
                {
                    "type": "file",
                    "path": "atom/install"
                }
            ]
        },
        {
            "name": "resources",
            "sources": [
                {
                    "type": "file",
                    "path": "common/Makefile"
                },
                {
                    "type": "file",
                    "path": "common/configure"
                },
                {
                    "type": "file",
                    "path": "resources/install"
                },
                {
                    "type": "file",
                    "path": "resources/io.atom.Atom.appdata.xml"
                }
            ]
        },
        {
          "name": "gvfs-trash",
          "buildsystem": "simple",
          "build-commands": [ "install -m755 gvfs-trash /app/bin/gvfs-trash" ],
          "sources": [{
            "type": "script",
            "dest-filename": "gvfs-trash",
            "commands": ["exec rm -r \"$@\""]
          }]
        }
    ]
}
